/*!=========================
      Base grid styles
==========================*/
$footer = 240px
$wrapper = 1170px

html, body
  height 100%
body
  font-size 16px
  line-height 1.2
  color $black
  background $bg-color
.container
  position relative
  min-height 100%
.main
  padding-bottom $footer
.m_footer
  position absolute
  left 0
  bottom 0
  width 100%
  height $footer
.wrapper
  clearfix()
  position relative
  width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto
.row
  clearfix()
.vertical-outer
  display table
.vertical-inner
  display table-cell
  vertical-align middle
  width 100%
.col-1-of-2
  float left
  width 50%
.col-1-of-3
  float left
  width 33.333%